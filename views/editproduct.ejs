<% include partials/header %>
<div id="editproducts_wrapper">
<form name="editProductForm" method="POST" action="/edit-product">
    <div class="divTable productsTable">
        <div class="divTableBody">
            <div class="divTableRow"><!-- Product Image -->
                    <div class="divTableHead">Product Image</div>
                    <div class="divTableCell"><img src="/img/<%= product.imgurl %>" style="width: 50px;"></div>
                    <div class="divTableCell">&nbsp;</div>
            </div>
            <div class="divTableRow"><!-- Product Name -->
                    <div class="divTableHead">Product Name</div>
                    <div class="divTableCell"><%= product.title %></div>
                    <div class="divTableCell">&nbsp;</div>
            </div>
            <div class="divTableRow"><!-- Product Inventory -->
                    <div class="divTableHead">Inventory</div>
                    <div class="divTableCell"><input style="text-align: center; " type="text" name="inventory" value="<%= product.inventory %>" size="8"></div>
                    <div class="divTableCell">&nbsp;</div>
            </div>
            <div class="divTableRow"><!-- Product Price -->
                    <div class="divTableHead">Price</div>
                    <div class="divTableCell"><input style="text-align: center; " type="text" name="price" value="<%= product.price %>" size="8"></div>
                    <div class="divTableCell">&nbsp;</div>
            </div>
            <div class="divTableRow"><!-- Product SKU -->
                    <div class="divTableHead">SKU</div>
                    <div class="divTableCell"><input style="text-align: center; " type="text" name="sku" value="<%= product.sku %>" size="8" readonly></div>
                    <div class="divTableCell">&nbsp;</div>
            </div>
        </div>
    </div>
    <input type="submit" value="Update"></form><br>
    <button type="button" onclick="location.href='/admin/products'" >Back</button>

</div>
<% include partials/footer %>